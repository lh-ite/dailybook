<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="日记内容显示界面"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="79dp"
            android:layout_height="44dp"
            android:text="标题" />

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="107dp"
            android:layout_toRightOf="@id/text_title"
            android:ems="10"
            android:inputType="text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp">

        <TextView
            android:id="@+id/text_content"
            android:layout_width="79dp"
            android:layout_height="44dp"
            android:text="内容" />

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="107dp"
            android:layout_toRightOf="@id/text_content"
            android:ems="10"
            android:inputType="text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="133dp">

        <TextView
            android:id="@+id/text_time"
            android:layout_width="79dp"
            android:layout_height="44dp"
            android:text="时间" />

        <EditText
            android:id="@+id/edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="107dp"
            android:layout_toRightOf="@id/text_time"
            android:ems="10"
            android:inputType="text" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="133dp">

        <TextView
            android:id="@+id/text_pic"
            android:layout_width="79dp"
            android:layout_height="44dp"
            android:text="照片"
            />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="112dp"
            android:layout_height="103dp"
            android:layout_marginLeft="164dp"
            android:layout_toRightOf="@id/text_pic" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/changeto_database"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="修改"
            app:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/delete_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="165dp"
            android:layout_toRightOf="@id/changeto_database"
            android:text="删除" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <Button
        android:id="@+id/add_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加图片" />

        <Button
            android:id="@+id/returnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154dp"
            android:layout_toRightOf="@id/add_pic"
            android:text="返回" />
    </RelativeLayout>


</LinearLayout>